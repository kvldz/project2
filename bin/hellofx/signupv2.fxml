<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="439.0" prefWidth="625.0"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="hellofx.SignupController">
    <children>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <!-- Left Panel -->
                <AnchorPane layoutX="-126.0" layoutY="-129.0"
                            prefHeight="574.0" prefWidth="751.0"
                            styleClass="left-form"
                            stylesheets="@logindesign.css"
                            AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0"
                            AnchorPane.topAnchor="0.0">
                    <children>
                        <Text fill="WHITE" layoutX="40.0" layoutY="228.0" text="Inventory &amp; Sales Management System">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>

                <!-- Right Form -->
                <AnchorPane layoutX="313.0"
                            prefHeight="445.0" prefWidth="314.0"
                            styleClass="right-form"
                            stylesheets="@logindesign.css"
                            AnchorPane.rightAnchor="-2.0">
                    <children>
                        <Label layoutX="79.0" layoutY="29.0" text="Sign up">
                            <font>
                                <Font name="Tahoma Bold" size="41.0"/>
                            </font>
                        </Label>

                        <TextField fx:id="usernameField"
                                   layoutX="47.0" layoutY="129.0"
                                   prefHeight="30.0" prefWidth="220.0"
                                   promptText="Username"
                                   styleClass="textfield"/>

                        <PasswordField fx:id="passwordField"
                                       layoutX="46.0" layoutY="177.0"
                                       prefHeight="30.0" prefWidth="220.0"
                                       promptText="Password"
                                       styleClass="textfield"/>

                        <PasswordField fx:id="confirmPasswordField"
                                       layoutX="46.0" layoutY="223.0"
                                       prefHeight="30.0" prefWidth="220.0"
                                       promptText="Confirm Password"
                                       styleClass="textfield"/>

                        <Button fx:id="signupButton"
                                layoutX="46.0" layoutY="295.0"
                                mnemonicParsing="false"
                                onAction="#handleSignupButtonAction"
                                prefWidth="220.0"
                                text="Create Account"
                                styleClass="login-btn"/>

                        <Button fx:id="cancelButton"
                                layoutX="81.0" layoutY="330.0"
                                mnemonicParsing="false"
                                onAction="#handleCancelButtonAction"
                                prefWidth="150.0"
                                text="Back"/>

                        <!-- Optional Close Button -->
                        <!-- You can add a handler or remove it -->
                        <Button layoutX="255.0" layoutY="14.0"
                                mnemonicParsing="false"
                                prefWidth="40.0"
                                text="X"
                                styleClass="close"
                                AnchorPane.rightAnchor="7.0"
                                AnchorPane.topAnchor="2.0"/>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</StackPane>
